<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/loophole_logo"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:paddingTop="5dp"
            android:layout_margin="10dp">


            <Button
                android:id="@+id/swipecard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Swipe Card"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/chipreading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="EMV Chip Reading"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/scancard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Scan Card"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Print"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/qrcodescan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="QR Code Scan"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/applepay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/click_event"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Apple Pay"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

</LinearLayout>